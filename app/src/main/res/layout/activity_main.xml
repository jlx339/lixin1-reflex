<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Reflex!                            Please select from following modes: "
        android:id="@+id/welcome"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/practise_mode_button"
        android:layout_alignEnd="@+id/practise_mode_button" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/practise_mode_button"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/welcome"
        android:layout_alignStart="@+id/statistics"
        android:text="Practise Mode" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/game_mode_button"
        android:layout_below="@+id/practise_mode_button"
        android:layout_alignStart="@+id/statistics"
        android:text="Game Mode" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/statistics"
        android:layout_below="@+id/game_mode_button"
        android:layout_centerHorizontal="true"
        android:text="My Statistics" />

</RelativeLayout>
