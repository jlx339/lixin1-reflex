<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/practiseClearButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minTime10"
        android:id="@+id/minTime10"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minTime100"
        android:id="@+id/minTime100"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/minTime10"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="maxTime10"
        android:id="@+id/maxTime10"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/minTime100"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="maxTime100"
        android:id="@+id/maxTime100"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/maxTime10"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avrTime10"
        android:id="@+id/avrTime10"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/maxTime100"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avrTime100"
        android:id="@+id/avrTime100"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/avrTime10"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medTime10"
        android:id="@+id/medTime10"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/avrTime100"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medTime100"
        android:id="@+id/medTime100"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="38dp"
        android:layout_alignTop="@+id/medTime10"
        android:layout_alignParentStart="true" />

</RelativeLayout>
