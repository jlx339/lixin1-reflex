<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to the Reflex!                            Please select from the following modes: "
        android:textSize="20dp"
        android:id="@+id/welcomeMessage"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/practiseModeButton"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/practiseModeButton"
        android:layout_marginTop="40dp"
        android:text="Practise Mode"
        android:layout_below="@+id/welcomeMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/gameModeButton"
        android:text="Game Mode"
        android:layout_below="@+id/practiseModeButton"
        android:layout_alignStart="@+id/practiseModeButton" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/myStatisticsButton"
        android:text="My Statistics"
        android:layout_below="@+id/gameModeButton"
        android:layout_alignStart="@+id/gameModeButton" />

</RelativeLayout>
